<h1>Create a new product</h1>
  <%= form_for @product, url: category_products_path do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :price %>
      <%= f.text_field :price %>
    </div>
    <div>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
      <%= f.hidden_field :category_id, value: params[:category_id] %>
      <%= f.submit "Submit"%>
    </div>
  <% end %>

    <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
    </div>

</body>

